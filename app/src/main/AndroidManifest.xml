<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="autyzmsoft.pl.kolory">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".SplashKlasa"
            android:theme="@android:style/Theme.Dialog"> <!-- male okienko na srodku, nie przyjrywa macierzystego activity -->
            <intent-filter>
                <action android:name="autyzmsoft.pl.kolory.SplashKlasa" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>





    </application>

</manifest>